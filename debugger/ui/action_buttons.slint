import { Button } from "std-widgets.slint";
import { Backend } from "backend.slint";


export component ActionButtons {

    property <length> button-padding: 10px;

    VerticalLayout {

        dump-core-btn := Button {
            width: self.min-width + button-padding;
            text: "Dump core";
            clicked => {
                Backend.dump-core();
            }
        }
        view-debug-header-btn := Button {
            width: self.min-width + button-padding;
            text: "View debug header";
            clicked => {
                Backend.view-debug-header();
            }
        }
        advance-btn := Button {
            width: self.min-width + button-padding;
            text: "Advance";
            clicked => {
                Backend.advance();
            }
        }
        continue-btn := Button {
            width: self.min-width + button-padding;
            text: "Continue";
            clicked => {
                Backend.continue();
            }
        }
        stop-btn := Button {
            width: self.min-width + button-padding;
            text: "Stop";
            clicked => {
                Backend.stop();
            }
        }

    }


}
