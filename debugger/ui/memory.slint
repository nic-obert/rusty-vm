import { TextEdit, ScrollView } from "std-widgets.slint";
import { SelectableText } from "utils.slint";


export component MemoryArea {

    in property <string> memory-lines;
    in property <string> memory-view;
    in-out property <int> memory-start;
    in-out property <int> memory-span;

    VerticalLayout {
        Text {
            text: "Memory";
        }
        ScrollView {

            // TODO: maybe change this
            min-height: 5rem;

            HorizontalLayout {

                alignment: start;
                spacing: 1rem;

                SelectableText {
                    multiline: true;
                    text: memory-lines;
                }

                SelectableText {
                    multiline: true;
                    text: memory-view;
                }
            }
        }

        HorizontalLayout {
            Text {
                text: "Start:";
            }
            TextInput {
                text: memory-start;
            }
            Text {
                text: "Span:";
            }
            TextInput {
                text: memory-span;
            }
        }
    }

}
